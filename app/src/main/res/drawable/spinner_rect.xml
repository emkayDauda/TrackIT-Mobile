<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <shape android:id="@+id/list_view_background_shape">
            <stroke android:width="1dp" android:color="#FF06E5F1"/>
            <padding
                android:top="1dp"
                android:bottom="1dp"
                android:left="10dp"
                android:right="30dp"/>
            <corners android:radius="5dp"/>
            <solid android:color="#fff"/>
        </shape>
    </item>

    <item>
        <bitmap android:gravity="right" android:src="@android:drawable/arrow_down_float"/>
    </item>

</layer-list>